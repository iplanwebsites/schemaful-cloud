{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pnpm build:vercel",
  "outputDirectory": "apps/cloud/dist",
  "installCommand": "pnpm install",
  "framework": null,
  "regions": ["iad1"],
  "functions": {
    "apps/cloud/api/**/*.ts": {
      "runtime": "nodejs22.x",
      "maxDuration": 30,
      "includeFiles": "apps/cloud/dist/**"
    }
  },
  "rewrites": [
    {
      "source": "/api/auth/:path*",
      "destination": "/api/auth/[...auth]"
    },
    {
      "source": "/api/trpc/:path*",
      "destination": "/api/trpc/[...trpc]"
    },
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/api/ssr"
    }
  ]
}
