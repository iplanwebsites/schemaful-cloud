# ContentFern Cloud - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required
# =============================================================================

# PostgreSQL connection string for cloud metadata database
# For local development: postgresql://contentfern:contentfern@localhost:5432/contentfern_cloud
# For production: Use Neon serverless PostgreSQL
 
DATABASE_URL=  

# Session (Optional - auto-generated if not provided)
SESSION_SECRET=  

# Auth.js secret for session encryption
# Generate with: openssl rand -base64 32
AUTH_SECRET=  

# =============================================================================
# Authentication (at least one provider required)
# =============================================================================

# Google OAuth credentials
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# Billing (optional - free plan only without this)
# =============================================================================

# Stripe API keys
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Stripe webhook secret for verifying webhook signatures
# Get from: https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for subscription plans
# Create products at: https://dashboard.stripe.com/products
STRIPE_PRO_PRICE_ID=

# =============================================================================
# Database Provisioning (optional - single-tenant mode without this)
# =============================================================================

# Neon API key for provisioning tenant databases
# Get from: https://console.neon.tech/app/settings/api-keys
NEON_API_KEY=

# =============================================================================
# Optional Features
# =============================================================================

# Storage (R2/S3) for asset uploads
R2_ACCOUNT_ID= 
R2_ACCESS_KEY_ID= 
R2_SECRET_ACCESS_KEY= 
R2_BUCKET_NAME= 
R2_PUBLIC_URL=  
# Resend for transactional emails
RESEND_API_KEY=

# Sentry for error tracking
SENTRY_DSN=
