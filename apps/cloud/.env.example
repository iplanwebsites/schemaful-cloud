# =============================================================================
# Schemaful Cloud - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values
# For Vercel: Configure these in Project Settings > Environment Variables

# -----------------------------------------------------------------------------
# Database (Required)
# -----------------------------------------------------------------------------
# PostgreSQL connection string (Neon recommended)
# Local: postgresql://schemaful:schemaful@localhost:5432/schemaful_cloud
DATABASE_URL=

# -----------------------------------------------------------------------------
# Authentication (Required)
# -----------------------------------------------------------------------------
# Auth.js secret - generate with: openssl rand -base64 32
AUTH_SECRET=

# Auth.js URL - your deployment URL (required for Vercel)
# Local: http://localhost:3001
# Production: https://cloud.schemaful.io
AUTH_URL=

# -----------------------------------------------------------------------------
# OAuth Providers (At least one required)
# -----------------------------------------------------------------------------
# Google OAuth - https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub OAuth - https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# -----------------------------------------------------------------------------
# Stripe Billing (Optional - free plan only without this)
# -----------------------------------------------------------------------------
# API keys - https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=

# Webhook secret - https://dashboard.stripe.com/webhooks
STRIPE_WEBHOOK_SECRET=

# Price IDs - https://dashboard.stripe.com/products
STRIPE_PRICE_PRO_MONTHLY=
STRIPE_PRICE_PRO_YEARLY=
STRIPE_PRICE_TEAM_MONTHLY=
STRIPE_PRICE_TEAM_YEARLY=

# -----------------------------------------------------------------------------
# Neon Database Provisioning (Optional - single-tenant without this)
# -----------------------------------------------------------------------------
# API key - https://console.neon.tech/app/settings/api-keys
NEON_API_KEY=

# -----------------------------------------------------------------------------
# R2/S3 Storage (Optional - external URLs only without this)
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET_NAME=schemaful-media
R2_PUBLIC_URL=

# -----------------------------------------------------------------------------
# Email (Optional)
# -----------------------------------------------------------------------------
# Resend - https://resend.com
RESEND_API_KEY=

# -----------------------------------------------------------------------------
# Observability (Optional)
# -----------------------------------------------------------------------------
# Sentry - https://sentry.io
SENTRY_DSN=
